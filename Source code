import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns
df = pd.read_csv("intelligent_chatbot_customer_support_updated.csv")
print("Data Loaded Successfully")
print(df.head())
print("\nData Info:")
print(df.info())
print("\nSummary Statistics:")
print(df.describe(include='all'))
print("\nMissing Values:")
print(df.isnull().sum())
plt.figure(figsize=(8, 5))
sns.histplot(df["Response_Time_Seconds"], kde=True, color='skyblue')
plt.title("Distribution of Chatbot Response Time")
plt.xlabel("Response Time (Seconds)")
plt.ylabel("Frequency")
plt.grid(True)
plt.tight_layout()
plt.savefig("response_time_distribution.png")
plt.close()
plt.figure(figsize=(6, 4))
sns.countplot(x="Resolved", data=df, palette="Set2")
plt.title("Resolved vs Unresolved Queries")
plt.xlabel("Resolved")
plt.ylabel("Count")
plt.tight_layout()
plt.savefig("resolved_status.png")
plt.close()
plt.figure(figsize=(6, 4))
sns.heatmap(df.select_dtypes(include='number').corr(), annot=True, cmap="coolwarm")
plt.title("Correlation Heatmap")
plt.tight_layout()
plt.savefig("correlation_heatmap.png")
plt.close()

print("\nVisualizations saved: response_time_distribution.png, resolved_status.png, correlation_heatmap.png")
